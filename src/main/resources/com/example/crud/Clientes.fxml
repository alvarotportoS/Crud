<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.crud.controller.ClienteController">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <Label style="-fx-font-weight: bold;" text="Gerenciamento de Clientes"><font><Font size="20.0" /></font></Label>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="txtNome" prefHeight="25.0" prefWidth="140.0" promptText="Nome do Cliente" />
        <TextField fx:id="txtCpf" promptText="Cpf" />
      <TextField fx:id="txtTelefone" promptText="Telefone" />
      <TextField fx:id="txtEmail" promptText="Email  "/>
      <TextField fx:id="txtCep" promptText="CEP"/>
        <Button onAction="#salvarCliente" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Salvar" />
        <Button onAction="#excluirCliente" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Excluir" />
        <Button onAction="#limparCampos" text="Limpar" />
    </HBox>

    <TableView fx:id="tabelaCliente" onMouseClicked="#selecionarItem" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colNome" prefWidth="175.0" text="Nome" />
            <TableColumn fx:id="colCpf" prefWidth="175.0" text="Cpf" />
            <TableColumn fx:id="colTelefone" prefWidth="100" text="Telefone" />
            <TableColumn fx:id="colEmail" prefWidth="250" text="Email" />
            <TableColumn fx:id="colCep" prefWidth="100" text="Cep" />
        </columns>
    </TableView>
</VBox>
